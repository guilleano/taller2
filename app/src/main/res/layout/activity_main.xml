<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.taller2.MainActivity">

    <LinearLayout
        android:layout_width="385dp"
        android:layout_height="499dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/txtEmpresa"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:text="Empresa xyz"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="34dp">

            <TextView
                android:id="@+id/txtSexo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.08"
                android:text="Sexo"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/txtTipoZapato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.03"
                android:text="TipÃ³ de zapato"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/txtMarca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.08"
                android:text="Marca"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="352dp"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Spinner
                android:id="@+id/cmbSexo"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.05"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="52dp" />

            <Spinner
                android:id="@+id/cmbTipoZapato"
                android:layout_width="126dp"
                android:layout_height="23dp"
                tools:layout_editor_absoluteX="121dp"
                tools:layout_editor_absoluteY="52dp" />

            <Spinner
                android:id="@+id/cmbMarca"
                android:layout_width="110dp"
                android:layout_height="23dp"
                tools:layout_editor_absoluteX="254dp"
                tools:layout_editor_absoluteY="52dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="359dp"
            android:layout_height="81dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="58dp"
            tools:layout_editor_absoluteY="91dp">

            <TextView
                android:id="@+id/txtCantidadZapatos"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:text="Cantidad de zapatos"
                android:textAlignment="center"
                android:textStyle="bold|italic"
                tools:layout_editor_absoluteX="89dp"
                tools:layout_editor_absoluteY="85dp" />

            <EditText
                android:id="@+id/lblCantidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/cantidadZapatos"
                android:inputType="number"
                android:textAlignment="center"
                tools:layout_editor_absoluteX="85dp"
                tools:layout_editor_absoluteY="112dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="192dp">

            <Button
                android:id="@+id/btnCalcular"
                android:layout_width="177dp"
                android:layout_height="match_parent"
                android:onClick="calcular"
                android:text="Calcular"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="192dp" />

            <Button
                android:id="@+id/btnBorrar"
                android:layout_width="130dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:onClick="borrar"
                android:text="Borrar"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="208dp"
                tools:layout_editor_absoluteY="192dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="356dp"
            android:layout_height="232dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="43dp"
            tools:layout_editor_absoluteY="261dp">

            <TextView
                android:id="@+id/txtValor"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="Valor compra"
                android:textAlignment="center"
                android:textStyle="bold|italic"
                tools:layout_editor_absoluteX="103dp"
                tools:layout_editor_absoluteY="260dp" />

            <EditText
                android:id="@+id/lblTotal"
                android:layout_width="352dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/valorCompra"
                android:inputType="number"
                android:textAlignment="center"
                tools:layout_editor_absoluteX="85dp"
                tools:layout_editor_absoluteY="302dp" />

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
